<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Playlist Songs</title>
</head>
<body>
<table border ="1">
    <tr>
        <td colspan="5"><a href="/">Back to PlaylistSong</a></td>
    </tr>
    <tr>
        <th>No</th>
        <th>Judul</th>
        <th>Artists</th>
        <th>url</th>
        <th>Played</th>
        
    </tr>
    <% let no =1; %>
    <% if(song.length > 0){%>
        <tr>
            <% song.forEach( (lagu) => { %>
            
            <td><%= no %></td>
            
            <td><%= lagu.title %></td>

            <td>
            <% lagu.artis.forEach( (artis) => { %>

              -  <%= artis %>
              <br>

            <%});%>
            </td>
    
            <td>
            <a href="<%= lagu.url %>">
                <%= lagu.url %>
            </a>
           
            </td>

            <td><%= lagu.played %> Times</td>

            </tr>
            <% });%>
            
        <% }else{ %>

        <tr>
            <td colspan="5">Tidak ada lagu di dalam playlist!!</td>
        </tr>
            <%}%>
  
   
       
</table>
</body>
</html>